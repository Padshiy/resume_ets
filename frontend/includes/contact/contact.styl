.contact
  border-top #3d6cb0 solid 5px
  position relative
  margin-right 25px
  margin-left 7px
  margin-bottom 79px


.contact__header
  display inline-block
  color #3d6cb0
  background-color #fff
  top -44px
  text-transform uppercase
  font-size 3.4em
  font-weight 900
  position relative
  padding-left 82px


.contact__header::before
  content ""
  width 76px
  height 76px
  display inline-block
  background url(../images/sprite.png) 0 0 no-repeat
  background-size cover
  position absolute
  left -1px
  top -16px
  background-position -308px 0


.contact__table
  display: table;
  font-size: 1.5em;
  position: relative;
  top: -5px;
  line-height: 1;


.table__row
  display table-row
  padding 10px 0


.table__cell_blue
  display table-cell
  color #3d6cb0
  padding-right 48px
  padding-bottom 36px
  text-transform uppercase
  font-weight 700


.table__cell
  display table-cell
  padding-right 48px
  padding-bottom 36px
  text-transform uppercase
  font-weight 700