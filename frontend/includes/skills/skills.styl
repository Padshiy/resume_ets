.skills
  border-top #3d6cb0 solid 5px
  position relative
  margin-right 25px
  margin-left 7px
  margin-bottom 78px

.skills__header
  display inline-block
  color #3d6cb0
  background-color #fff
  top -47px
  text-transform uppercase
  font-size 3.4em
  font-weight 900
  position relative
  padding-left 82px

.skills__header::before
  content ""
  width 76px
  height 76px
  display inline-block
  background url(../images/sprite.png) 0 0 no-repeat
  background-size: cover;
  position: absolute
  left -2px
  top -13px
  background-position -233px 0

.skills__skills-block
  position relative
  top -19px
  padding 0 45px

.skills-block__span
  text-align center
  display block
  text-transform uppercase
  font-size 2em
  font-weight 400
  margin-bottom 5px

.skills-block__creative
  display flex
  justify-content space-between
  margin-bottom 19px

.skills-block__creative_circle
  height 18px
  width 18px
  display inline-block
  background-color #e6e6e6
  border-radius 50%
  margin-right 5px


.skills-block__creative_circle::before
  content ""
  height 18px
  width 18px
  display block
  background-color #3d6cb0
  border-radius 50%

.skills-block__creative_circle-active ~ .skills-block__creative_circle::before
  background-color transparent

