.experience
  border-top #3d6cb0 solid 5px
  position relative
  margin-right 0
  margin-left 23px
  margin-bottom 86px

.experience__header
  display inline-block
  color #3d6cb0
  background-color #fff
  top -44px
  text-transform uppercase
  font-size 3.4em
  font-weight 900
  position relative
  padding-left 92px

.experience__header::before
  content ""
  display inline-block
  background url(../images/sprite.png) 0 0 no-repeat
  background-size cover
  position absolute
  left -1px
  width 80px
  height 80px
  top -17px
  background-position: -5px 0

.experience__container_span-header
  font-size 2em
  display inline-block
  margin-left 39px
  position relative
  top -2px

.experience__container_span-header::before
  content ""
  width 20px
  height 20px
  border-radius 50%
  background-color #000000
  display inline-block
  position absolute
  left -29px
  top 9px

.experience__container_span-main
  font-size 2.2em
  display block
  margin-left 48px
