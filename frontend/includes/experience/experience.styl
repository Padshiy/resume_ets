.experience
  min-height 411px
  position relative
  margin-right 0
  margin-left 23px
  margin-bottom 154px
  @media screen and (max-width: 400px)
    margin-left 21px

  &__header
    display block
    color #3d6cb0
    background-color #fff
    text-transform uppercase
    font-size 3.4em
    font-weight 900
    position absolute
    padding-left 96px
    top 3px
    word-wrap break-word
    max-width 100%
    height 80px
    text-overflow ellipsis
    box-sizing border-box
    white-space nowrap
    overflow hidden
    vertical-align middle
    line-height 1.5
    margin 0
    padding-top 6px
    left -4px

    &::before
      content ""
      display inline-block
      background url(../images/sprite.png) 0 0 no-repeat
      background-size cover
      position absolute
      left 0
      width 80px
      height 80px
      top -2px
      background-position: -3px 0

  &__line
    height 5px
    width 100%
    background #3d6cb0
    top 40px
    position relative

  &__block
    top 112px
    position relative

  &__container_span-header
    min-height 35px
    font-size 2.2em
    display inline-block
    margin-left 39px
    position relative
    margin-bottom 3px
    @media screen and (max-width: 400px)
      margin-left 21px

    &-strong
      color #3d6cb0
      font-weight 900
      margin-left 10px
      letter-spacing 1.2px
      margin-right 19px

    &::before
      content ""
      width 20px
      height 20px
      border-radius 50%
      background-color #000000
      display inline-block
      position absolute
      left -29px
      top 9px

  &__container_span-main
    font-size 2.2em
    display block
    margin-left 48px
    font-weight bold
    letter-spacing -1.2px
    line-height 1.04
    @media screen and (max-width: 400px)
      margin-left 30px

  &__container_span-footer-block-first
    min-height 57px
    font-size 1.2em
    display block
    margin-left 52px
    margin-bottom 6px
    margin-top 8px
    line-height 1.3
    @media screen and (max-width: 400px)
      margin-left 30px

  &__container_span-footer-block-second
    min-height 57px
    font-size 1.2em
    display block
    margin-left 52px
    margin-bottom 8px
    margin-top 8px
    line-height 1.3
    @media screen and (max-width: 400px)
      margin-left 30px

  &__container_span-footer-block-three
    font-size 1.2em
    display block
    margin-left 52px
    margin-bottom 6px
    margin-top 8px
    line-height 1.3
    @media screen and (max-width: 400px)
      margin-left 30px