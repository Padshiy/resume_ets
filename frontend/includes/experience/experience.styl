.experience
  position relative
  margin-right 0
  margin-left 23px
  margin-bottom 86px

.experience__header
  display block
  color #3d6cb0
  background-color #fff
  text-transform uppercase
  font-size 3.4em
  font-weight 900
  position absolute
  padding-left 82px
  top 10px
  word-wrap break-word
  max-width 100%
  height 73px
  text-overflow ellipsis
  box-sizing border-box
  white-space nowrap
  overflow hidden
  vertical-align middle
  line-height 1.5
  margin 0

.experience__header::before
  content ""
  display inline-block
  background url(../images/sprite.png) 0 0 no-repeat
  background-size cover
  position absolute
  left 0
  width 76px
  height 76px
  top 0
  background-position: -5px 0

.experience__line
  height 5px
  width 100%
  background #3d6cb0
  top 40px
  position relative

.experience__block
  top 60px
  position relative

.experience__container_span-header
  font-size 2em
  display inline-block
  margin-left 39px
  position relative
  top 90px

.experience__container_span-header::before
  content ""
  width 20px
  height 20px
  border-radius 50%
  background-color #000000
  display inline-block
  position absolute
  left -29px
  top 9px

.experience__container_span-main
  font-size 2.2em
  display block
  margin-left 48px
  font-weight bold
  letter-spacing -1.2px
  line-height 1.04

.eduction__container_span-footer-block-first
  font-size 1.2em
  display block
  margin-left 52px
  margin-bottom 8px
  margin-top 8px
  line-height 1.3

.eduction__container_span-footer-block-second
  font-size 1.2em
  display block
  margin-left 52px
  margin-bottom 13px
  margin-top 8px
  line-height 1.3

.eduction__container_span-footer-block-three
  font-size 1.2em
  display block
  margin-left 52px
  margin-bottom 6px
  margin-top 8px
  line-height 1.3

