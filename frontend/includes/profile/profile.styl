.profile
  margin-right 24px
  margin-left 21px
  margin-bottom 29px
  position relative

  &__header
    display block
    color #3d6cb0
    background-color #fff
    text-transform uppercase
    font-size 3.4em
    font-weight 900
    position absolute
    padding-left 88px
    top 4px
    word-wrap break-word
    max-width 100%
    height 80px
    text-overflow ellipsis
    box-sizing border-box
    white-space nowrap
    overflow hidden
    vertical-align middle
    line-height 1.5
    margin 0
    left -4px
    padding-top 8px

    &:before
      content ""
      width 80px
      height 80px
      display inline-block
      background url(../images/sprite.png) 0 0 no-repeat
      background-size cover
      position absolute
      left -1px
      top -1px
      background-position -402px 0

  &__line
    height 5px
    width 100%
    background #3d6cb0
    top 40px
    position relative

  &__text
    min-height 250px
    font-size 1.3em
    margin-top 87px
    display block
    letter-spacing -0.43px