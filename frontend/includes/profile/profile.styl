.profile
  border-top #3d6cb0 solid 5px
  position relative
  margin-right 25px
  margin-left 7px
  margin-bottom 78px

.profile--header
  display inline-block
  color #3d6cb0
  background-color #fff
  top -44px
  text-transform uppercase
  font-size 3.4em
  font-weight 900
  position relative
  padding-left 82px
.profile--header::before
  content ""
  width 76px
  height 76px
  display inline-block
  background url(../images/sprite.png) 0 0 no-repeat
  background-size cover
  position absolute
  left -1px
  top -16px
  background-position -383px 0
.profile--text
  font-size 16px
  margin-top -30px
  display block
  line-height 18.6px
  letter-spacing -0.43px