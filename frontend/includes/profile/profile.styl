.profile
  margin-right 24px
  margin-left 21px
  margin-bottom 78px
  position relative

.profile__header
  display block
  color #3d6cb0
  background-color #fff
  text-transform uppercase
  font-size 3.4em
  font-weight 900
  position absolute
  padding-left 82px
  top 10px
  word-wrap break-word
  max-width 100%
  height 73px
  text-overflow ellipsis
  box-sizing border-box
  white-space nowrap
  overflow hidden
  vertical-align middle
  line-height 1.5
  margin 0

.profile__header:before
  content ""
  width 76px
  height 76px
  display inline-block
  background url(../images/sprite.png) 0 0 no-repeat
  background-size cover
  position absolute
  left 0
  top 0
  background-position -383px 0

.profile__line
  height 5px
  width 100%
  background #3d6cb0
  top 40px
  position relative

.profile__text
  font-size 16px
  margin-top 90px
  display block
  line-height 18.6px
  letter-spacing -0.43px