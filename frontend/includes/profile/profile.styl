.profile
  margin-right 24px
  margin-left 21px
  margin-bottom 78px

.profile__header
  display inline-block
  color #3d6cb0
  background-color #fff
  text-transform uppercase
  font-size 3.4em
  font-weight 900
  position relative
  padding-left 82px
  margin-bottom 22px

.profile__header:before
  content ""
  width 76px
  height 76px
  display inline-block
  background url(../images/sprite.png) 0 0 no-repeat
  background-size cover
  position absolute
  left -2px
  top -12px
  background-position -383px 0

.profile__line
  height 5px
  width calc(100% - 260px)
  display inline-block
  margin-bottom 14px

.profile__text
  font-size 16px
  margin-top -30px
  display block
  line-height 18.6px
  letter-spacing -0.43px