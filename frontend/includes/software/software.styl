.software
  position relative
  margin-right 0
  margin-left 23px
  margin-bottom 78px

  &__header
    display block
    color #3d6cb0
    background-color #fff
    text-transform uppercase
    font-size 3.4em
    font-weight 900
    position absolute
    padding-left 94px
    top 5px
    word-wrap break-word
    max-width 100%
    height 73px
    text-overflow ellipsis
    box-sizing border-box
    white-space nowrap
    overflow hidden
    vertical-align middle
    line-height 1.5
    margin 0
    left -3px
    padding-top 6px

    &::before
      content ""
      width 76px
      height 76px
      display inline-block
      background url(../images/sprite.png) 0 0 no-repeat
      background-size cover
      position absolute
      left 0
      top -2px
      background-position -157px 0

  &__line
    height 5px
    width 100%
    background #3d6cb0
    top 40px
    position relative

  &__containerSoft
    top 99px
    position relative

